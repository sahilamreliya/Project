<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Mersedesbenz">



    <ImageView
        android:id="@+id/back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/img"
        android:layout_margin="20dp"/>


    <TextView
        android:id="@+id/MD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mersedes Benz"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"/>


    <ImageView
        android:id="@+id/dot"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/img_2"
        android:layout_alignRight="@id/MD"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"/>

    <ImageView
        android:id="@+id/car"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:src="@drawable/img_1" />


    <androidx.cardview.widget.CardView
        android:id="@+id/cd1"
        android:layout_width="400dp"
        android:layout_height="120dp"
        android:layout_alignTop="@id/car"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="194dp" >



        <TextView
       android:id="@+id/MM"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="      328 Mi             155mph             4.4s      "
       android:textSize="20dp"
       android:textStyle="bold"
       android:textColor="@color/black"
       android:layout_marginTop="60dp"/>




        <TextView
            android:id="@+id/RT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="           Range                         top speed                  0-60mph      "
            android:textColor="@color/black"
            android:layout_marginTop="90dp" />




    </androidx.cardview.widget.CardView>





    <androidx.cardview.widget.CardView
        android:id="@+id/cd2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="120dp"
        android:layout_alignTop="@id/cd1"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        app:cardBackgroundColor="@color/white">





    <TextView
        android:id="@+id/TM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Transmissions"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"/>




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Automatic   >"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginStart="260dp"/>


    </androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView
        android:id="@+id/cd3"
        android:layout_width="170dp"
        android:layout_height="150dp"
        android:layout_marginTop="50dp"
        android:layout_alignTop="@id/cd2"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        app:cardBackgroundColor="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  Automatic                     >"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="145 mph"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_marginTop="80dp"
            android:layout_marginStart="20dp"
            />






    </androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView
        android:id="@+id/cd4"
        android:layout_width="170dp"
        android:layout_height="150dp"
        android:layout_toRightOf="@id/cd3"
        android:layout_alignTop="@id/cd3"
        android:layout_marginStart="10dp"
        app:cardBackgroundColor="@color/white" >






    </androidx.cardview.widget.CardView>





</RelativeLayout>